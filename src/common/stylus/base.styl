body,html{
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC','STHeitiSC-Light','Arial, Helvetica, sans-serif'
}
.clearfix{
   display: inline-block
   &::afrer{
     display: block
     content:'.'
     height:0
     line-height: 0
     clear:both
     visibility: hidden
   }
}
@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5){
  .border-1px-top,.border-1px-bottom{
    &::after{
      -weibkit-transform:scaleY(.7)
      transform:scaleY(.7)
    }
  }
  .border-1px-left,.border-1px-right{
    &::after{
      -weibkit-transform:scaleX(.7)
      transform:scaleX(.7)
    }
  }
}


@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2){
  .border-1px-top,.border-1px-bottom,.border-1px-left,.border-1px-after{
    &::after{
      -weibkit-transform:scaleY(.5)
      transform:scaleY(.5)
    }
  }
  .border-1px-left,.border-1px-right{
    &::after{
      -weibkit-transform:scaleX(.5)
      transform:scaleX(.5)
    }
  }
}

